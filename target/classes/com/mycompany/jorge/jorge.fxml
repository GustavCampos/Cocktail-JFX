<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox maxHeight="Infinity" maxWidth="Infinity" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.jorge.AppController">

    <children>

        <!-- MENU -->
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="New" />
                        <MenuItem text="Openâ€¦" />
                        <SeparatorMenuItem />
                        <MenuItem text="Close" />
                        <MenuItem text="Quit" />
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem text="Undo" />
                        <MenuItem text="Redo" />
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <!-- MAIN RESPONSIVE SPLIT -->
        <SplitPane dividerPositions="0.25, 0.6" VBox.vgrow="ALWAYS">

            <!-- LEFT PANEL -->
            <ScrollPane fitToWidth="true" minWidth="200">
                <content>
                    <VBox fillWidth="true" spacing="10">
                        <padding><Insets bottom="8" left="8" right="8" top="8" /></padding>

                        <Label text="Search a drink" />

                        <HBox spacing="8">
                            <TextField fx:id="searchDrinkTF" HBox.hgrow="ALWAYS" />
                            <Button onAction="#searchDrink" text="Search" />
                        </HBox>

<!--                        <Label text="Pesquisa ingrediente"/>

                        <HBox spacing="8">
                            <TextField HBox.hgrow="ALWAYS"/>
                            <Button text="Buscar"/>
                        </HBox>-->

                        <Separator />

                        <Label text="Drink Filters" />
                        
                        <Label text="Category" />
                        <ComboBox fx:id="categoryFilter" />
                        
                        <Label text="Glass" />
                        <ComboBox fx:id="glassFilter" />
                        
                        <Label text="Ingredient" />                   
                        <ComboBox fx:id="ingredientFilter" />
    
                        <Label text="Alcoholic" />
                        <ComboBox fx:id="alcoholicFilter" />

                        <Button onAction="#searchDrinkWithFilter" text="Search with filters" />

                        <Separator />

                        <Button onAction="#displayRandomDrink" text="Random Drink" />
                    </VBox>
                </content>
            </ScrollPane>

            <!-- CENTER PANEL -->
            <VBox spacing="8">
                <padding><Insets left="8" top="8" /></padding>

                <Label text="Results" />

                <ListView fx:id="itemList" onMouseClicked="#displayListItem" VBox.vgrow="ALWAYS" />
            </VBox>

            <!-- RIGHT PANEL -->
            <AnchorPane minWidth="400" prefWidth="400">
                <children>
                    <!-- Scrollable content -->
                    <ScrollPane fx:id="drinkScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

                        <content>
                            <!-- VBox holds ALL content for proper scrolling -->
                            <VBox fx:id="drinkContentBox" fillWidth="true" spacing="10">
                                <padding>
                                    <Insets bottom="10" left="10" right="10" top="10" />
                                </padding>

                                <!-- Placeholder -->
                                <Label fx:id="drinkPlaceholderText" style="-fx-font-size: 14px;" text="Your drink will be displayed here" wrapText="true" />

                                <!-- Drink Name -->
                                <Label fx:id="drinkName" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

                                <!-- Drink Image -->
                                <ImageView fx:id="drinkImage" fitWidth="300" preserveRatio="true" />

                                <!-- Ingredients -->
                                <Label style="-fx-font-size: 18px; -fx-underline: true;" text="Ingredients:" />
                                <VBox fx:id="drinkIngredientsList" spacing="4" />

                                <!-- Instructions -->
                                <Label style="-fx-font-size: 18px; -fx-underline: true;" text="Instructions:" />
                                <Text fx:id="drinkInstructions" wrappingWidth="300" />
                            </VBox>
                        </content>
                    </ScrollPane>

                    <!-- Loader Overlay -->
                    <ProgressIndicator fx:id="drinkLoadingIndicator" maxHeight="50" maxWidth="50" style="-fx-background-color: rgba(255,255,255,0.5);" visible="false" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" />
                </children>
            </AnchorPane>

        </SplitPane>

    </children>
</VBox>
